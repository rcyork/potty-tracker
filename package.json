{
  "name": "potty-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "client-dev": "cd client && npm run start",
    "build": "tsc && cd client && npm run build && cp -r build/ ../dist/public",
    "server-dev": "npm run watch-ts & npm run watch-node",
    "watch-ts": "tsc -w",
    "watch-node": "NODE_ENV=test nodemon --inspect dist/server.js --delay 100ms",
    "dev": "concurrently npm:server-dev npm:client-dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rcyork/potty-tracker.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rcyork/potty-tracker/issues"
  },
  "homepage": "https://github.com/rcyork/potty-tracker#readme",
  "dependencies": {
    "arangojs": "^6.9.0",
    "body-parser": "^1.18.3",
    "config": "^3.0.1",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",
    "concurrently": "^4.1.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
